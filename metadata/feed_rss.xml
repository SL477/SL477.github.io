---
permalink: /feed_rss.xml
---
<?xml version="1.0" encoding="utf-8"?>
<rss xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/" version="2.0">
    <channel>
      <title>Toms Post Feed</title>
      <link>{{ site.site_url }}</link>
      <description>My longer ramblings</description>
      <language>{{ site.lang }}</language>
      <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
      <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
      <docs>http://www.rssboard.org/rss-specification</docs>
      <generator>Link477</generator>
      <managingEditor> - ({{ site.author.name }})</managingEditor>
      <webMaster> - ({{ site.author.name }})</webMaster>
      <atom:link href="{{ page.url | absolute_url }}" rel="self"/>
      {%- for post in site.posts -%}
      <item>
          {%- assign post_title = post.title | smartify | strip_html | normalize_whitespace | xml_escape -%}
          <title>{{ post_title }}</title>
          <link>{{ post.url | absolute_url }}</link>
          <description>
              <![CDATA[{%- if post.image -%}
      <figure>
        <img src="{{ post.image.path | absolute_url }}" alt="{{ post.image.alt}}" class="u-photo" height="{{ post.image.height }}" width="{{ post.image.width }}" />
        <figcaption>
          <em>
            {%- if post.photo_caption -%} {{ post.photo_caption }} {%- else -%} {{
            post.image.alt }} {%- endif -%}
          </em>
        </figcaption>
      </figure>
      {%- endif -%}{{ post.content | strip }}]]>
          </description>
          <guid isPermaLink="true">{{ post.url | absolute_url }}</guid>
          {%- if post.tags.first -%}
          <category>{{ post.tags.first | xml_escape }}</category>
          {%- endif -%}
          <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
      </item>
      {%- endfor -%}
    </channel>
</rss>